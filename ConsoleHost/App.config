<?xml version="1.0" encoding="utf-8" ?>
<configuration>
	<startup>
		<supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.8.1" />
	</startup>
	<system.serviceModel>
		<services>
			<service behaviorConfiguration="mexBehaviour" name="SampleService.SampleService">
				<endpoint address="SampleService" binding="netTcpBinding"
				  contract="SampleService.ISampleService" />
				<host>
					<baseAddresses>
						<add baseAddress="http://localhost:8084/" />
						<add baseAddress="net.tcp://localhost:8090/" />
					</baseAddresses>
				</host>
			</service>
		</services>
		<behaviors>
			<serviceBehaviors>
				<behavior name="mexBehaviour">
					<serviceMetadata httpGetEnabled="true"/>
				</behavior>
			</serviceBehaviors>
		</behaviors>
	</system.serviceModel>
</configuration>